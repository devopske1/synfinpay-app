<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondary"
    tools:context=".views.OnBoardingOneFragment">



    <ImageView
        android:id="@+id/OnBoardingImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/onb1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="154dp"
        />

    <TextView
        android:id="@+id/tvOnBoardingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/sfp_black"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/galano_classinc_bold"
        android:text="Welcome to SynfinPay"
        app:layout_constraintTop_toBottomOf="@id/OnBoardingImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />


    <TextView
        android:id="@+id/tvOnBoarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/galano_classic"
        android:gravity="center"
        android:text="@string/onb_one"
        android:textColor="@color/sfp_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/tvOnBoardingTitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"

        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="18dp"
            android:backgroundTint="@color/blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back_24"
                android:layout_gravity="center"
                />

        </androidx.cardview.widget.CardView>



        <me.relex.circleindicator.CircleIndicator3
            android:layout_width="50dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardviewBack"
            app:layout_constraintEnd_toStartOf="@id/cardViewNext"

            />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="18dp"
            android:backgroundTint="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward_24"
                android:layout_gravity="center"
                />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>