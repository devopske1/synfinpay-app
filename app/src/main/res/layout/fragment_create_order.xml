<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/backcreateorder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24_white"
            android:layout_marginStart="17dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/createOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Order"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsblack900"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="27dp"
            android:textSize="22sp"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/filter"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="27dp"
            app:layout_constraintEnd_toStartOf="@id/shopCart"

            />


        <ImageView
            android:id="@+id/shopCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/baseline_shopping_cart_24"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="27dp"

            />

        <TextView
            android:id="@+id/tvBestWines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Best wines now discount upto 30%"
            app:layout_constraintTop_toBottomOf="@id/createOrder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="55dp"
            android:layout_marginStart="37dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsblack900"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvBestWines"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, vivamus justo elit."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="66dp"
            android:gravity="center"
            android:layout_marginTop="10dp"


            />












    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/tvCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/top"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"

        />


    <TextView
        android:id="@+id/tvBeverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beverages"
        android:layout_marginStart="27dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCategories"/>

    <TextView
        android:id="@+id/tvGrapes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grapes"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tvBeverage"
        app:layout_constraintTop_toTopOf="@id/tvBeverage"
        app:layout_constraintBottom_toBottomOf="@id/tvBeverage"/>

    <TextView
        android:id="@+id/tvMeadHoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mead/Honey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tvGrapes"
        app:layout_constraintTop_toTopOf="@id/tvGrapes"
        app:layout_constraintBottom_toBottomOf="@id/tvGrapes"/>

    <TextView
        android:id="@+id/tvHoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mead/Honey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tvMeadHoney"
        app:layout_constraintTop_toTopOf="@id/tvMeadHoney"
        app:layout_constraintBottom_toBottomOf="@id/tvMeadHoney"/>

    <TextView
        android:id="@+id/tvGrape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grape"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tvHoney"
        app:layout_constraintTop_toTopOf="@id/tvHoney"
        app:layout_constraintBottom_toBottomOf="@id/tvHoney"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_beverage_category"
        app:layout_constraintTop_toBottomOf="@id/tvBeverage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/popularProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular products"
        app:layout_constraintTop_toBottomOf="@id/recyclerCategories"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="@font/poppinsblack900"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="27dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPopular"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        tools:listitem="@layout/item_popular_product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popularProducts" />


</androidx.constraintlayout.widget.ConstraintLayout>