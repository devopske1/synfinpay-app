<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imgPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_paypal_payment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@id/tvCategoryName"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:text="REO1AE8T5P"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgPayment"
        app:layout_constraintTop_toTopOf="@id/imgPayment" />


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:text="28/01/2023 12:35pm"
        app:layout_constraintStart_toStartOf="@id/tvCategoryName"
        app:layout_constraintTop_toBottomOf="@id/tvCategoryName"
        app:layout_constraintBottom_toBottomOf="@id/imgPayment"/>


    <TextView
        android:id="@+id/btn_setLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Ksh 4,000.00"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCategoryName" />

    <TextView
        android:id="@+id/tvClaim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="Mpesa"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toStartOf="@id/imgForward"
        app:layout_constraintTop_toBottomOf="@id/btn_setLimit"
        app:layout_constraintBottom_toBottomOf="@id/tvDate"/>


    <ImageView
        android:id="@+id/imgForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvDate"
        app:layout_constraintTop_toBottomOf="@id/btn_setLimit" />



</androidx.constraintlayout.widget.ConstraintLayout>




