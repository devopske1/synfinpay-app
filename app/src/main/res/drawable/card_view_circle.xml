<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Circle (Blue) -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/blue" />
        </shape>
    </item>

    <!-- Inner Circle (Transparent) -->
    <item
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp">
        <shape
            android:shape="oval">
            <solid android:color="@android:color/holo_blue_bright" />
        </shape>
    </item>
</layer-list>
